<h1>Edit Movie <%= params["id"] %></h1>

<form action="/update_movie/<%= params["id"] %>">
  <div>
    <label for="Title">title</label>
    <input id="Title" type="text" name="title" value="<%= @elem.title %>">
  </div>
  <div>
    <label for="Year">Caption</label>
    <input id="Year" type="text" name="year" value="<%= @elem.year %>">
  </div>
  <div>
    <label for="Duration">duration</label>
    <input id="Duration" type="text" name="duration" value="<%= @elem.duration %>">
  </div>
  <div>
    <label for="Description">description</label>
    <input id="Description" type="text" name="description" value="<%= @elem.description %>">
    <p><%= @elem.description %></p>
  </div>
  <div>
    <label for="Image url">Image URL</label>
    <input id="Image url" type="text" name="image_url" value="<%= @elem.image_url %>">
  </div>

  <button>Update movie</button>
</form>