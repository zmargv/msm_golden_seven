<h1>All Movies</h1>

<a href="/movies/new">Add a new movie</a>

<% @list_movies.each do |curr| %>
<div class="thumbnail col-md-6">
    <div class="caption col-md-6">
        <ul>
            <li><%= curr.title%></li>
            <li><%= curr.year%></li>
            <li><%= curr.duration%></li>
            <li><%= curr.description%></li>
            <li><%= curr.image_url%></li>
        </ul>
        <a href="/movies/<%= curr.id %>" class="btn btn-default btn-block">Show details</a>
        <a href="/movies/<%= curr.id %>/edit" class="btn btn-default btn-block">Edit</a>
        <a href="/delete_movie/<%= curr.id %>" class="btn btn-default btn-block">Delete movie</a>
    </div>
</div>
<% end %>